<% include ../partials/_header %>

<div class="col-xs-12">
  <form id="example-form" class="js-form-valid ui-form col-xs-12 col-md-7">
    <% include ../components/_error-inline-alert %>

    <div class="col-xs-12 pd">
      <h5>An example of a text input with only certain characters allowed (pattern) and a maxlength requirement</h5>
      <% var input= data.firstName; %>
      <% include ../components/_input %>
    </div>

    <div class="col-xs-12 pd">
      <h5>An example of a required text field with certain characters disallowed (pattern)</h5>
      <% input= data.inputAddressOne; %>
      <% include ../components/_input %>
    </div>

    <div class="col-xs-12 pd">
      <h5>Numbers only and min/maxlength</h5>
      <% input= data.zipcode; %>
      <% include ../components/_input %>
    </div>

    <div class="col-xs-12 pd">
      <h5>DOB validation for valid date, date not in the future and formatting</h5>

      <% input= data.inputDOB; %>
      <% include ../components/_input %>
    </div>

    <div class="col-xs-12 pd">
      <h5>Radio button validation example</h5>

      <% var radioBtn= data.gender; %>
      <% include ../components/_radio-btn %>
    </div>

    <div class="col-xs-12 pd">
      <h5>Checkbox validation example</h5>

      <% var checkbox= data.termsAndCond; %>
      <% include ../components/_checkbox %>
    </div>

    <div class="col-xs-12 pd">
      <h5>Phone validation and formatting example</h5>

      <% input= data.phoneNumber; %>
      <% include ../components/_input %>
    </div>

    <div class="col-xs-12 pd">
      <h5>Example password validations, including the hint text listed below and checking for password match</h5>

      <% input= data.password; %>
      <% include ../components/_input-pw %>

      <% input= data.passwordConfirm; %>
      <% include ../components/_input-pw %>
    </div>

    <div class="col-xs-12 pd">
      <h5>The following examples relate to potential security question validations and follow these rules:</h5>
      <ul>
        <li>Security Answer cannot match password or username</li>
        <li>Security Answer cannot match question</li>
        <li>Security Answers cannot match</li>
        <li>Length 3-40 characters</li>
        <li>Only disallowed < * &amp; symbols</li>
      </ul>
      <% input= data.username; %>
      <% include ../components/_input %>
    </div>

    <div class="col-xs-12 pd">
      <% var select= data.securityQuestion.questionOne; %>
      <% include ../components/_select %>
      <% input= data.securityQuestion.answerInputOne; %>
      <% include ../components/_input %>

      <% info= data.securityQuestion.answerInputOne; %>
      <% include ../components/_sq-requirements %>

      <% select= data.securityQuestion.questionTwo; %>
      <% include ../components/_select %>
      <% input= data.securityQuestion.answerInputTwo; %>
      <% include ../components/_input %>
    </div>

    <div class="pd col-md-5 col-xs-12 primary-btn-wrap">
      <% var btn= data.continueBtn; %>
      <% include ../components/_btn %>
      </div>
  </form>

</div>

<% include ../partials/_footer %>
